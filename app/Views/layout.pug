                    div.col-4
                        ul.navbar-nav
                            li.nav-item
                                a.nav-link(href='/manager') Gestion
                            li.nav-item
                                a.nav-link(href='/shared') Partagés
                            li.nav-item
                                a.nav-link(href='/favorite') Favoris
                            li.nav-item
                                a.nav-link(href='/credit-card') Crédit
        .container
            br
            br
            h1=title
            br
            +flash
            br
            block content

        footer.page-footer.font-small.teal.pt-4.footer
            .row
                .col-12.socialLink

                    // Facebook
                    a.fb-ic
                        i.fab.fa-facebook-f.fa-lg.white-text.mr-md-5.mr-3.fa-2x
                    // Twitter
                    a.tw-ic
                        i.fab.fa-twitter.fa-lg.white-text.mr-md-5.mr-3.fa-2x
                    // Google +
                    a.gplus-ic
                        i.fab.fa-google-plus-g.fa-lg.white-text.mr-md-5.mr-3.fa-2x
                    // Linkedin
                    a.li-ic
                        i.fab.fa-linkedin-in.fa-lg.white-text.mr-md-5.mr-3.fa-2x
                    // Instagram
                    a.ins-ic
                        i.fab.fa-instagram.fa-lg.white-text.mr-md-5.mr-3.fa-2x
                    // Pinterest
                    a.pin-ic
                        i.fab.fa-pinterest.fa-lg.white-text.fa-2x
