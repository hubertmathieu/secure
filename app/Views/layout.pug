    body
        div#menu.sticky-top
            nav.navbar.navbar-expand-lg.navbar-dark
                .collapse.navbar-collapse(id='navbarSupportedContent')
                    div.col-4
                        a.navbar-brand.col-4#company(href="#") Secure
