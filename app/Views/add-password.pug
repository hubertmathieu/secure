include mixins/base
extends layout

block content
    +form("post", "/add-password")
        .form-group
            label(for='website') Nom du site-web
            input#website(name="website" type='text' placeholder='Ex: Facebook').form-control.inputPassword
        .form-group

            label(for='password') Mot de passe
            .input-group
                input#password(name="password" type='text' placeholder='Ex: Omega123' size="40").form-control.inputPassword
                .input-group-prepend
                    button#generate(type='button' value='Generate' tabindex='2').btn.btn-outline-secondary.inputButton Générer



        button(type='submit').btn.btn-outlin.mt-2.btn-success Ajouter